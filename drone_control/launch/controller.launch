<launch>

<rosparam file="$(find drone_control)/config/controller.yaml" command="load"/>
<node args="motor_right_position_controller motor_back_position_controller motor_left_position_controller motor_front_position_controller joint_state_controller " name="controller_spawner" ns="drone" output="screen" pkg="controller_manager" respawn="false" type="spawner"/>
<node name="robot_state_publisher" output="screen" pkg="robot_state_publisher" respawn="false" type="robot_state_publisher">
  <remap from="/joint_states" to="/drone/joint_states"/>
</node>

</launch>